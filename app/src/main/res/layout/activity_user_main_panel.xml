<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/daTe"
        android:fontFamily="@font/font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily Records"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:layout_margin="20dp"
        />

    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CheckIn"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="time"
                android:id="@+id/checkInT"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                />
            <Button
                android:layout_gravity="center"
                android:id="@+id/addCI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BreakOut"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_margin="10dp"
                android:id="@+id/breakOutT"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                />
            <Button
                android:id="@+id/addBO"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Break\nIn"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/breakInT"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                />
            <Button
                android:layout_gravity="center"
                android:id="@+id/addBI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check\nOut"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                />
            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/checkOutT"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00:00"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp"
                />
            <Button
                android:layout_gravity="center"
                android:id="@+id/addCO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/saVe"
        android:padding="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Records"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_margin="30sp"
        />

</LinearLayout>